<!DOCTYPE html>
<html class="no-js" {{ sonata_seo_html_attributes() }} >
<head>
    {% block structured_data %}
        <script type="application/ld+json">{% spaceless %}
{
    "@context": "http://schema.org",
    "@type": "Person",
    "name": "Developers For Future",
    "image": "https://developersforfuture.org/img/socialcard.png",
    "url": "https://developersforfuture.org",
    "sameAs": [
        "https://twitter.com/DevelopersForFuture",
        "https://developersforfuture.org"
    ]
}
{% endspaceless %}</script>
    {% endblock %}

    {{ sonata_seo_metadatas() }}
    {{ sonata_seo_link_canonical() }}
    {{ sonata_seo_lang_alternates() }}
    {{ sonata_seo_title() }}
    {{ sonata_seo_head_attributes() }}
    <meta name="og:url" charset="UTF-8" content="{{ app.request.uri }}"/>
    {% block extra_metas %}{% endblock %}
    <link rel="apple-touch-icon" sizes="57x57" href="/favicons/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/favicons/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/favicons/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/favicons/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/favicons/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/favicons/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/favicons/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/favicons/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/favicons/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicons/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/manifest.json">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" type="text/css" href="/build/base.css">

    <!-- Matomo -->
    <script type="text/javascript">
		var _paq = window._paq || [];
		/* tracker methods like "setCustomDimension" should be called before "trackPageView" */
		_paq.push(["setCookieDomain", "*.developersforfuture.org"]);
		_paq.push(['trackPageView']);
		_paq.push(['enableLinkTracking']);
		(function () {
			var u = "//piwik.prberghoff.de/";
			_paq.push(['setTrackerUrl', u + 'matomo.php']);
			_paq.push(['setSiteId', '3']);
			var d = document, g = d.createElement('script'), s = d.getElementsByTagName('script')[0];
			g.type = 'text/javascript';
			g.async = true;
			g.defer = true;
			g.src = u + 'matomo.js';
			s.parentNode.insertBefore(g, s);
		})();
    </script>
    <!-- End Matomo Code -->
</head>
<body class="bg-light-gray">
<header class="bg-medium-green">
    <a id="header-logo-space" href="{{ url('home_redirect') }}">
        <div id="header-logo"></div>
        <div id="header-logo-title">Developers for Future</div>
    </a>
    <nav>
        <ul>
            <li><a href="{{ url('/cms/routes/home') }}">Home</a></li>
            <li><a href="{{ url('/cms/routes/blog') }}">Articles</a></li>
            <li><a href="{{ url('/cms/routes/organisation') }}">Organisation</a></li>
        </ul>
        <div>
            <button class="view-source-button">View Source on GitHub</button>
        </div>
    </nav>
</header>

<main>
    <div class="container">
        <div class="columns">
            <div class="column is-8">
                <content>
                    {% block content %}

                    {% endblock %}
                </content>
            </div>
            <div class="column is-4">
                <aside class="is-mobile">
                    {% include 'includes/sidebar.html.twig.html' %}
                </aside>
            </div>
        </div>
    </div>

</main>

{% include "includes/footer.html.twig" %}

<script src="/build/app.js"></script>
</body>
</html>
