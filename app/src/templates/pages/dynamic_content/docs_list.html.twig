{% extends 'normal-page.html.twig' %}

{% block content %}
    <div class="docs-list-page">
        <div class="has-text-centered">
            <h2 class="has-text-weight-light">Docs</h2>
        </div>
        <div class="columns">
            {% set i = 0 %}
            {% for doc in docs %}
            {% set i = i + 1 %}
            {% if i % 2 %}
        </div>
        <div class="columns">
            {% endif %}
            <div class="column is-6 doc-card">
                <div class="card">
                    <div class="card-header">
                        <p class="card-header-title">{{ doc.title }}</p>
                    </div>
                    <div class="card-content">
                        <div class="content">
                            <p class="text">{{ doc.description }}</p>
                            {% for cat in doc.categories %} <span class="tag">{{ cat }}</span>&nbsp;{% endfor %}
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="{{ doc.link|raw }}" class="card-footer-item">read on</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
