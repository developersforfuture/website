{% extends 'normal-page.html.twig' %}

{% block content %}
    <div class="blog-list-page">
        <div class="has-text-centered">
            <h2 class="has-text-weight-light">Blog</h2>
        </div>
        <div class="columns">
            {% set i = 0 %}
            {% for article in articles %}
            {% set i = i + 1 %}
            {% if i % 2 %}
            </div>
            <div class="columns">
            {% endif %}
            <div class="column is-6 article-card">
                <div class="card">
                    <div class="card-header">
                        <p class="card-header-title">{{ article.title }}</p>
                    </div>
                    <div class="card-content">
                        <div class="content">
                            {{ article.description }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="{{ url(article) }}" class="card-footer-item">read on</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
