<div class="column is-{{ block.tileLength }} bg-beige-light">
    <div class="card is-shady">
        <div class="card-image has-text-centered">
            <i class="fa fa-{{ block.iconClass }}"></i>
        </div>
        <div class="card-content">
            <div class="content">
                {% if block.title %}
                <h2>{{ block.title }}</h2>
                {% endif %}
                <p>{{ block.body }}</p>
            </div>
        </div>
    </div>
</div>
