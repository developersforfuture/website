<div class="column is-{{ block.tileLength }} {{ block.tileClass }} card-text-without-footer">
    <div class="card">
        <div class="card-header">
            <p class="card-header-title">
                {{ block.cardTitle }}
            </p>
        </div>
        <div class="card-content">
            <div class="content">
                {{ block.body|raw }}
            </div>
        </div>
    </div>
</div>
