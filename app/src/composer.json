{
    "license": "MIT",
    "type": "project",
    "name": "economists/website",
    "description": "Website based on SuluCMS for developers for future",
    "homepage": "https://economistsforfuture.org",
    "keywords": [
        "symfony",
        "sulu",
        "sulucms",
        "cms",
        "web-application",
        "platform",
        "data-managment",
        "project-template"
    ],
    "authors": [
        {
            "name": "developersforfuture",
            "homepage": "https://developersforfuture.org"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "symfony/console": "^4.3",
        "symfony/dotenv": "^4.3",
        "symfony/flex": "^1.2",
        "symfony/framework-bundle": "^4.3",
        "symfony/monolog-bundle": "^3.1",
        "symfony/security": "^4.3",
        "symfony/security-bundle": "^4.3",
        "symfony/templating": "^4.3",
        "symfony/twig-bundle": "^4.3",
        "symfony/webpack-encore-bundle": "^1.7",
        "symfony/yaml": "^4.3",
        "dantleech/phpcr-migrations-bundle": "^1.0",
        "doctrine/doctrine-bundle": "^1.10",
        "doctrine/doctrine-cache-bundle": "^1.3.1",
        "friendsofsymfony/http-cache-bundle": "^2.6",
        "jackalope/jackalope-doctrine-dbal": "^1.3",
        "league/flysystem": "^1.0",
        "league/flysystem-aws-s3-v3": "^1.0",
        "sulu/sulu": "^2.0.1",
        "symfony/asset": "^4.3",
        "symfony/config": "^4.3",
        "symfony/inflector": "^4.3",
        "symfony/lock": "^4.3",
        "symfony/mime": "^4.3",
        "symfony/monolog-bridge": "^4.3",
        "symfony/swiftmailer-bundle": "^3.1.4",
        "symfony/var-dumper": "^4.3",
        "symfony/var-exporter": "^4.3",
        "zendframework/zend-stdlib": "^2.3",
        "zendframework/zendsearch": "^2.0.0rc6"
    },
    "require-dev": {
        "php-translation/symfony-storage": "^1.0",
        "phpstan/phpstan-shim": "^0.11",
        "symfony/debug-pack": "^1.0",
        "symfony/test-pack": "^1.0",
        "symfony/web-server-bundle": "^4.3",
        "friendsofphp/php-cs-fixer": "^2.16",
        "jangregor/phpstan-prophecy": "^0.4.2",
        "phpcr/phpcr-shell": "^1.0",
        "phpstan/phpstan": "^0.11.19",
        "phpstan/phpstan-doctrine": "^0.11.6",
        "phpstan/phpstan-phpunit": "^0.11.2",
        "phpstan/phpstan-symfony": "^0.11.6",
        "phpstan/phpstan-webmozart-assert": "^0.11.3",
        "sensiolabs/security-checker": "^6.0",
        "symfony/browser-kit": "^4.3",
        "symfony/debug": "^4.3",
        "symfony/debug-bundle": "^4.3",
        "symfony/phpunit-bridge": "^4.3",
        "symfony/thanks": "^1.1",
        "symfony/web-profiler-bundle": "^4.3",
        "thecodingmachine/phpstan-strict-rules": "^0.11.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*",
        "paragonie/random_compat": "2.*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "bin/websiteconsole cache:clear": "php-script",
            "bin/adminconsole sulu:media:init": "php-script",
            "bin/adminconsole massive:search:init": "php-script",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-root-package-install": [
            "php -r \"file_put_contents('.env.development', 'APP_ENV=dev' . PHP_EOL);\"",
            "php -r \"file_put_contents('.env', str_replace('APP_SECRET=', 'APP_SECRET=' . bin2hex(random_bytes(16)), file_get_contents('.env')));\""
        ],
        "post-create-project-cmd": [
            "Sulu\\Bundle\\CoreBundle\\Composer\\ScriptHandler::removeComposerLockFromGitIgnore",
            "Sulu\\Bundle\\CoreBundle\\Composer\\ScriptHandler::removePackageLockJsonFromGitIgnore"
        ],
        "bootstrap-test-environment": [
            "@php bin/adminconsole doctrine:database:create --if-not-exists --env test",
            "@php bin/adminconsole doctrine:schema:update --force --env test"
        ],
        "test": "SYMFONY_PHPUNIT_VERSION=8.2 vendor/bin/simple-phpunit",
        "security-check": "bin/websiteconsole security:check",
        "lint": [
            "@lint-composer",
            "@phpstan",
            "@php-cs",
            "@lint-twig",
            "@lint-yaml",
            "@lint-schema"
        ],
        "phpstan": [
            "bin/websiteconsole cache:warmup --env=test --no-optional-warmers",
            "@test install",
            "@php vendor/bin/phpstan analyze -c ./phpstan.neon"
        ],
        "php-cs": "@php vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "php-cs-fix": "@php vendor/bin/php-cs-fixer fix",
        "lint-composer": "@composer validate",
        "lint-twig": "@php bin/websiteconsole lint:twig templates/",
        "lint-yaml": "@php bin/websiteconsole lint:yaml config/",
        "lint-schema": "@php bin/adminconsole doctrine:schema:validate -e test"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        }
    }
}
